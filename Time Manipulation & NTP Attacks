# System Time Control
# Disable automatic time synchronization
# Set time from NTP server
# Re-enable NTP
# Fake time using ntpdate output


sudo timedatectl set-ntp false | sudo ntpdate tombwatcher.htb  | sudo timedatectl set-ntp true

sudo faketime "$(sudo ntpdate scepter.htb 2>&1 | grep -oP '\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}')" /bin/date


# Python script for time manipulation
wget https://raw.githubusercontent.com/5epi0l/ADUtilities/refs/heads/main/FixTime/fixtime.py>
python3 fixtime.py -u TARGET_URL [--verbose] [--restore-ntp]


